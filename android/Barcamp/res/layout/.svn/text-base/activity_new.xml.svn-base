<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/item_detailed_linearlayout">

    <!-- new title -->
    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@android:color/transparent">
        
        <LinearLayout 
	        android:layout_width="wrap_content" 
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@drawable/left_round_corner_shape"
	        android:layout_weight="7"
	        android:gravity="center">
	        <TextView
			    android:id="@+id/new_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:textColor="#000"			
				android:hint="@string/empty_title"/>
       	</LinearLayout>
        <View 
            android:layout_height="50dp"
		    android:layout_width="0.5dp"
		    android:background="#BDBDBD"/>
        <LinearLayout 
	        android:layout_width="wrap_content" 
	        android:layout_height="50dp"
	        android:orientation="horizontal"
	        android:background="@drawable/right_round_corner_shape"
	        android:layout_weight="3"
	        android:gravity="center">
	        <ImageView
	            android:id="@+id/share_this_button"
	            android:layout_width="40dp"
	        	android:layout_height="40dp"
	        	android:background="@drawable/share_button_selector"
			    android:onClick="shareNew"
			    android:contentDescription="@string/app_name"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- New content -->
    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/customshape"
        android:layout_marginTop="5dp">	    
	    <TextView
		    android:id="@+id/new_date"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"			
			android:textSize="14sp"
			android:gravity="center"
			android:textColor="#B7474C"
			android:hint="@string/empty_date"
			android:layout_marginTop="5dp"/>
	    <ScrollView	
	        android:layout_width="fill_parent"
			android:layout_height="wrap_content"> 
	    	<TextView
			    android:id="@+id/new_body"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"			
				android:textSize="14sp"
				android:gravity="center"
				android:textColor="#000"
				android:layout_marginTop="5dp"
				android:hint="@string/empty_content"/>
    	</ScrollView>
		</LinearLayout>  
</LinearLayout>